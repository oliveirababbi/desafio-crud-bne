@model ContatoModel
@{
    ViewData["Title"] = "Confirmação de exclusão de contato";
}

<div class="text-center">
    <h3>Deseja realmente apagar o contato @Model.Nome?</h3>
<br>

<a class="btn btn-primary btn-block" role="button" asp-controller="Contato" asp-action="Index">Cancelar</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="Contato" asp-route-id="@Model.Id" asp-action="Delete">Confirmar</a>
</div>